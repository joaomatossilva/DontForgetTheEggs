@model DontForgetTheEggs.Core.Features.Manage.Category.Delete.Command
    
<div class="row">

    <div class="col-lg-6">
        @using (Html.BeginForm())
        {
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Delete @Model.Name Category</h3>
                </div>
                <div class="card-body">
                    
                    @Html.ValidationSummary(false)
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)

                    <p>Are you sure you want to delete this Category?</p>

                    @if (Model.HasGroceries)
                    {
                        <p>
                            Since this category has groceries, you need to tell me the new category for them
                        </p>
                        <p>
                            @Html.DisplayFor(x => x.ExistingNewCategoryId)
                            @Html.TextBoxFor(x => x.ExistingNewCategoryId)
                        </p>
                    }

                </div>
                <div class="card-footer">
                    <input type="submit" class="btn btn-danger" value="Delete"/>
                    <a href="@Url.Action("Detail", new { id = Model.Id })" class="btn btn-default pull-right">Cancel</a>
                </div>
            </div><!-- /.card -->
        }
    </div>
    <!-- /.col-lg-6 -->
</div>