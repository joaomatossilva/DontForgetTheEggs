@model DontForgetTheEggs.Core.Features.GroceryList.Edit.Command
    
<div class="row">

    <div class="col-lg-6">
        @using (Html.BeginForm())
        {
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit List</h3>
                </div>
                <div class="card-body">
                    
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)

                    <div class="form-group">
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.DueIn)
                        @Html.TextBoxFor(x => x.DueIn, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.DueIn)
                    </div>


                </div>
                <div class="card-footer">
                    <input type="submit" class="btn btn-primary" value="Save"/>
                    <a href="@Url.Action("Detail", new { id = Model.Id })" class="btn btn-default pull-right">Cancel</a>
                </div>
            </div><!-- /.card -->
        }
    </div>
    <!-- /.col-lg-6 -->
</div>