@using DontForgetTheEggs.Core.Features.GroceryList
@model Detail.Model
    
<div class="row">

    <div class="col-lg-8">
        @using (Html.BeginForm())
        {
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@Model.Name</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Edit", new { id = Model.Id })"><i class="fa fa-edit"></i></a>
                    </div>
                </div>
                <div class="card-body">

                    @foreach (var item in Model.Items)
                    {
                        <div class="list-item">
                            <span>@item.GroceryName (@item.Quantity)</span>
                            <input type="checkbox" />
                        </div>
                    }

                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default pull-right">Back</a>
                </div>
            </div><!-- /.card -->
        }
    </div>
    <!-- /.col-lg-8 -->

    <div class="col-lg-4">
        @using (Html.BeginForm("AddIngredient", "GroceryList"))
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add Ingredient</h3>
                </div>
                <div class="card-body">



                </div>
                <div class="card-footer">
                    <input type="submit" class="btn btn-primary" value="Add" />
                </div>
            </div><!-- /.card -->
        }

        @using (Html.BeginForm("AddNewIngredient", "GroceryList"))
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Ingredient</h3>
                </div>
                <div class="card-body">

                    @Html.Partial("_AddNewIngredient", new AddNewIngredient.Command { GroceryListId = Model.Id, Quantity = 1 })

                </div>
                <div class="card-footer">
                    <input type="submit" class="btn btn-primary" value="Add" />
                </div>
            </div><!-- /.card -->
        }
    </div>
    <!-- /.col-lg-4 -->
</div>
